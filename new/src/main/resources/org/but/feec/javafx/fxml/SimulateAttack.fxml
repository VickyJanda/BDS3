<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>

<VBox minHeight="625.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.but.feec.javafx.controllers.SimulateAttackController">
    <children>
        <ScrollPane fx:id="contentScrollPane" prefHeight="-1.0" prefWidth="-1.0" style="-fx-border-width: 0;">
            <content>
                <AnchorPane fx:id="contentAnchorPane" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="100.0"
                            VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="DUMMY TABLE" AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="400.0" />
                        <!-- Adjusted TableView position to ensure it doesn't overlap with search fields -->
                        <TableView fx:id="systemPersonsTableView" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"
                                   prefWidth="602" prefHeight="300.0" maxWidth="1000" AnchorPane.topAnchor="100.0"
                                   AnchorPane.leftAnchor="100.0">
                            <columns>
                                <TableColumn fx:id="personsId" minWidth="30.0" prefWidth="40" text="id"
                                             style="-fx-alignment: center;"/>
                                <TableColumn fx:id="personsEmail" minWidth="75.0" prefWidth="220" text="email"
                                             style="-fx-alignment: center;"/>
                                <TableColumn fx:id="personsGivenName" minWidth="75.0" prefWidth="100.0"
                                             text="given name" style="-fx-alignment: center;"/>
                                <TableColumn fx:id="personsFamilyName" minWidth="75.0" prefWidth="100.0"
                                             text="family name" style="-fx-alignment: center;"/>
                                <TableColumn fx:id="personsAge" minWidth="30.0" prefWidth="40" text="age"
                                             style="-fx-alignment: center;"/>
                                <TableColumn fx:id="personsPhoneNumber" minWidth="75.0" prefWidth="100.0" text="phone"
                                             style="-fx-alignment: center;"/>
                            </columns>
                        </TableView>
                        <Label text="Type SQL to be executed:" AnchorPane.topAnchor="455.0" AnchorPane.leftAnchor="100.0" />
                        <TextField fx:id="newPersonEmail" promptText="Your SQL querry" AnchorPane.topAnchor="450.0" AnchorPane.leftAnchor="320.0"/>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</VBox>
